datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  entries   Entry[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Entry {
  id        String   @id @default(cuid())
  title     String
  content   String
  mood      String?
  images    String[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}